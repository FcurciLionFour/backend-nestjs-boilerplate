NODE_ENV=production
PORT=3000

FRONTEND_URL=https://staging.example.com
CORS_ORIGINS=https://staging.example.com
COOKIE_SAME_SITE=none
COOKIE_SECURE=true
COOKIE_CSRF_MAX_AGE_MS=7200000
COOKIE_REFRESH_MAX_AGE_MS=604800000

TRUST_PROXY=true
HTTP_BODY_LIMIT=1mb
HTTP_URLENCODED_LIMIT=1mb
SWAGGER_ENABLED=true
SWAGGER_PATH=docs

DATABASE_URL=postgresql://app:secret@db:5432/app?schema=public
SEED_ADMIN_EMAIL=

JWT_ACCESS_SECRET=replace-with-32-plus-chars
JWT_REFRESH_SECRET=replace-with-32-plus-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
